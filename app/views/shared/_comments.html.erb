<br>
<ul class="comments">
  <% if post.comments.empty? %>
    <li>There are no comments yet.</li>
  <% else %>
    <% comments_to_display = show_all ? post.comments : post.comments.limit(5) %>
    <% comments_to_display.each do |comment| %>
      <%= render partial: 'shared/comment', locals: { comment: comment } %>
    <% end %>
  <% end %>
</ul>
